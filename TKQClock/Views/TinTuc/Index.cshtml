@using TKQClock.Models
@using PagedList.Mvc
@model PagedList.PagedList<TinTuc>
@{
    ViewBag.Title = "TKQClock";
    Layout = "~/Views/Shared/_LayoutTinTuc.cshtml";

}
<h2 class="section-heading text-white" style="display: flex; justify-content: center; padding-top: 21px; height: 80px; background-color: #19212b; margin: 126px -32px 16px -32px; ">Tin Tức</h2>
<style>
    .mt0{
        margin-top: 0 !important;
    }
</style>
<div class="container mt0 news_section_container">
    @foreach (var item in Model)
    {
        <div class="row row-item-new">
            <div class="col-md-3">
                <div class="img-box">
                    <a href="@Url.Action("NoiDungTinTuc", "TinTuc", new { id = item.MaTT})">
                        <img src="~/hinhTinTuc/@item.Img" alt="@item.TieuDe" />
                    </a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="content-box">
                    <h3><a href="@Url.Action("NoiDungTinTuc", "TinTuc", new { id = item.MaTT})" title="@item.TieuDe">@item.TieuDe</a></h3>
                    <div class="description-box">
                        @item.NoiDung
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-6"></div>
        <div class="col-6" style="text-align: right; display: flex; margin-left: 793px;">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>

    </div>
</div>